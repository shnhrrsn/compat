{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "out",
    "target": "es2019",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "types", "next-env.d.ts"]
}
