{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "types": ["node"],
    "tsBuildInfoFile": ".tsbuildinfo/tsbuildinfo.json"
  },
  "exclude": ["node_modules"]
}
